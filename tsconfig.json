{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["components/*"]
    },
    "strict": true,
    "strictNullChecks": true,
    "module": "esnext",
    "moduleResolution": "Bundler",
    "declaration": true,
    "outDir": ".",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "jsxFragmentFactory": "React.Fragment",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "es6",
    "lib": ["dom", "es2017"],
    "skipLibCheck": true,
    "stripInternal": true,
    "resolvePackageJsonExports": true
  },
  "include": ["./components/**/*"],
  "exclude": ["node_modules", "lib", "es", "dist", "react-playground"]
}
